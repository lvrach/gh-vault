{
  "name": "gh-vault",
  "version": "0.1.0",
  "description": "GitHub CLI for Pull Request operations with secure token storage",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "bin": {
    "gh-vault": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli/index.ts",
    "build": "tsc",
    "start": "node dist/cli/index.js",
    "alias": "echo \"alias gh='node $PWD/dist/cli/index.js'\"",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "knip": "knip",
    "check": "pnpm typecheck && pnpm lint && pnpm format:check && pnpm knip",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "node-jq": "^6.3.1",
    "octokit": "^5.0.5",
    "open": "^10.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@microsoft/eslint-plugin-sdl": "^1.1.0",
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/eslint-plugin": "^1.6.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.2.0",
    "http-status-codes": "^2.3.0",
    "knip": "^5.82.1",
    "msw": "^2.12.7",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
